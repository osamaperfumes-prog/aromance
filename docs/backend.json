
{
  "entities": {
    "Product": {
      "title": "Product",
      "type": "object",
      "description": "Represents a perfume product available for sale.",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the perfume product."
        },
        "brand": {
          "type": "string",
          "description": "Brand of the perfume."
        },
        "description": {
          "type": "string",
          "description": "Detailed description of the perfume."
        },
        "imageUrl": {
          "type": "string",
          "description": "URL of the product image from ImageKit."
        },
        "price": {
          "type": "number",
          "description": "Price of the perfume."
        },
        "category": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Category of the perfume (e.g., testers, travel size)."
        },
        "discount": {
          "type": "number",
          "description": "The discount percentage applied to the product (e.g., 20 for 20% off)."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when the product was created."
        }
      },
      "required": [
        "name",
        "brand",
        "description",
        "imageUrl",
        "price",
        "category",
        "createdAt"
      ]
    },
    "User": {
      "title": "User",
      "type": "object",
      "description": "Represents a user of the Aromance website.",
      "properties": {
        "firstName": {
          "type": "string",
          "description": "First name of the user."
        },
        "lastName": {
          "type": "string",
          "description": "Last name of the user."
        },
        "email": {
          "type": "string",
          "description": "Email address of the user.",
          "format": "email"
        },
        "rewardPoints": {
          "type": "number",
          "description": "Reward points accumulated by the user."
        },
        "wholesale": {
          "type": "boolean",
          "description": "Flag indicating if the user has wholesale account."
        }
      },
      "required": [
        "firstName",
        "lastName",
        "email"
      ]
    },
    "Order": {
      "title": "Order",
      "type": "object",
      "description": "Represents a customer order.",
      "properties": {
        "orderDate": {
          "type": "string",
          "description": "Date when the order was placed.",
          "format": "date-time"
        },
        "totalAmount": {
          "type": "number",
          "description": "Total amount of the order."
        },
        "status": {
          "type": "string",
          "description": "Status of the order (e.g., processing, shipped, delivered)."
        },
        "shippingAddress": {
          "type": "string",
          "description": "The address the order was shipped to."
        },
        "buyerName": {
          "type": "string",
          "description": "Name of the buyer."
        },
        "phoneNumber": {
          "type": "string",
          "description": "Phone number of the buyer."
        },
        "deliveryMethod": {
          "type": "string",
          "description": "Chosen delivery method (e.g., delivery, pickup)."
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "productId": {"type": "string"},
              "name": {"type": "string"},
              "brand": {"type": "string"},
              "quantity": {"type": "number"},
              "itemPrice": {"type": "number"},
              "imageUrl": {"type": "string"}
            },
            "required": ["productId", "name", "brand", "quantity", "itemPrice", "imageUrl"]
          }
        }
      },
      "required": [
        "orderDate",
        "totalAmount",
        "status",
        "shippingAddress",
        "buyerName",
        "phoneNumber",
        "deliveryMethod",
        "items"
      ]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "/products/{productId}": {
      "schema": {
        "$ref": "#/entities/Product"
      },
      "description": "Stores individual product details."
    },
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/User"
      },
      "description": "Stores user profile information."
    },
    "/orders/{orderId}": {
        "schema": {
            "$ref": "#/entities/Order"
        },
        "description": "Stores customer order information."
    }
  }
}
