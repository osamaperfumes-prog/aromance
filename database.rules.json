{
  "rules": {
    // Authenticated admins have full read/write access to the entire database.
    ".read": "auth != null",
    ".write": "auth != null",
    "orders": {
      // The general read rule is overridden here to be more specific.
      // Admins can still read the full list.
      ".read": "auth != null",
      // Allow anyone to create a new order.
      // This rule is a combination of the previous .write and a new validation.
      ".write": "!data.exists() && newData.exists()",
      "$orderId": {
        // Admins can read/write individual orders.
        ".read": "auth != null",
        ".write": "auth != null"
      }
    }
  }
}
